<% @page_title = "Admin Users" %>

<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-danger">
      <i class="fa fa-user"></i> 
      Admin Users 
      <span class="badge"><%= @admin_users.count %></span>
    </h3>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-laptop"></i><%= link_to "Dashboard", admin_path %>
      </li>
      <li><i class="fa fa-user"></i>Admin Users</li>                
    </ol>
  </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
              <p>
              <%= link_to(new_admin_user_path, 
                  remote: true,
                  class: "btn btn-success btn-sm") do %>
                  <span class="btn-label">
                    <i class="fa fa-plus"></i> Admin User
                  </span> 
              <% end %>
              </p>
            </header>
            
            <table class="table table-striped table-advance table-hover" id="dataTables-adminuser">
             <thead>
                <tr>
                   <th>Full Name</th>
                   <th>Username</th>
                   <th><i class="fa fa-envelope"></i> Email</th>
                   <th><i class="fa fa-wrench"></i> Action</th>
                </tr>                           
             </thead>
            <tbody class="admin-index">
              <%= render "index" %>
            </tbody>
          </table>
        </section>
    </div>
</div>
<div id="admin-modal" class="modal fade"></div>



