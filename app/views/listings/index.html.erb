<% @page_title = "All Listings" %>

<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-danger">
      <i class="fa fa-th-list"></i> 
      Listings for 
        <u><%= @product.name %></u>
      <span class="badge"><%= @listings.count %></span>
    </h3>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-laptop"></i><%= link_to "Dashboard", admin_path %>
      </li>
      <li>
        <i class="fa-th-list"></i><%= link_to "Categories", products_path %>
      </li>
      <li><i class="fa fa-th-list"></i>Listings</li>                
    </ol>
  </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
              <p>
              <%= link_to(new_listing_path(:product_id => @product.id),
                  remote: true,
                  class: "btn btn-success btn-sm") do %>
                  <span class="btn-label">
                    <i class="fa fa-plus"></i> 
                  </span> Listing
              <% end %>
              </p>
            </header>
            
            <table class="table table-striped table-advance table-hover" id="dataTables-listing">
             <thead>
                <tr>
                  <th>#</th>
                  <th>Listing</th>
                  <th>Original Price</th>
                  <th>Current Price</th>
                  <th><i class="fa fa-wrench"></i> Action</th>
                </tr>                           
             </thead>
            <tbody class="listing-index">
              <%= render "index" %>
            </tbody>
          </table>
        </section>
    </div>
</div>
<div id="listing-modal" class="modal fade"></div>