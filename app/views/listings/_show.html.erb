<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 class="text-info"><%= @listing.name %> <%= image_tag @listing.image.url(:thumb) if @listing.image? %></h3>   
    </div>
    <div class="modal-body">
      <h4>Description Header:</h4>
      <p class="text-muted"><%= @listing.short_desc %></p>
      <h4>Description Body:</h4>
      <p class="text-muted"><%= @listing.long_desc %></p>
      <h4>Original Price:</h4>
      <p class="text-danger"><%= number_to_currency(@listing.orig_price, 
          :unit => "INR", :format => "%u %n") %></p>
      <h4>Current Price:</h4>
      <p class="text-danger"><%= number_to_currency(@listing.curr_price, 
          :unit => "INR", :format => "%u %n") %></p>
      <p>
    </div>
    <div class="modal-footer">
      <%= link_to "Close", "#", class: "btn btn-secondary", data: {dismiss: "modal"} %>
    </div>
  </div>
</div>