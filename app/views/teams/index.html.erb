<% @page_title = "Team Members" %>

<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header text-danger">
      <i class="icon_group"></i> 
      Team Members
      <span class="badge"><%= @teams.count %></span>
    </h3>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-laptop"></i><%= link_to "Dashboard", admin_path %>
      </li>
      <li><i class="icon_group"></i>Team Members</li>                
    </ol>
  </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
              <p>
              <%= link_to(new_team_path, 
                  remote: true,
                  class: "btn btn-success btn-sm") do %>
                  <span class="btn-label">
                    <i class="fa fa-plus"></i> 
                  </span> Member
              <% end %>
              </p>
            </header>
            
            <table class="table table-striped table-advance table-hover" id="dataTables-team">
             <thead>
                <tr>
                  <th>Name</th>
                  
                   <th><i class="fa fa-envelope"></i> Email</th>
                   <th><i class="fa fa-wrench"></i> Action</th>
                </tr>                           
             </thead>
            <tbody class="team-index">
              <%= render "index" %>
            </tbody>
          </table>
        </section>
    </div>
</div>
<div id="team-modal" class="modal fade"></div>