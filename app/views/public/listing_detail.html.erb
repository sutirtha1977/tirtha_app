<div class="page" id="list-details">
    <div class="container">
        <div class="section-header">
            <h2 class="title-one"><span class="highlight"><strong><%= @list_details.name %></strong></span></h2>
        </div>
        <div class="pull-left">
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-laptop"></i> <%= link_to "Home", root_path %>
                </li>
                <li>
                    <i class="fa fa-th-list"></i> <%= @list_details.name %>
                </li>                
            </ol>
        </div>
    </div>
    <div class="container">
		<div class="row">
            <div class="content-wrapper">   
                <div class="item-container">    
                    <div class="container"> 
                        <div class="row">
                            <div class="product col-sm-4 service-image-left">
                                <center>
                                    <%= images(@list_details.image_loc, {class: "img-responsive img-circle"}, "listing") %>
                                </center>
                            </div>
                            <div class="col-sm-8">
                                <div class="h3 text-danger"><%= @list_details.name %></div>
                                <div class="h4 text-info"><%= @list_details.short_desc %></div>
                                <div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
                                <hr>
                                <div class="h4"><%= number_to_currency(@list_details.curr_price, :unit => "Rs. ") %></div>
                                <!-- <div class="product-stock">In Stock</div> -->
                                <hr>
                                <div class="btn-group cart">
                                    <% if user_signed_in? %>
                                        <%= form_for @order_item, remote: true do |f| %>
                                            <%= f.hidden_field :listing_id, value: @list_details.id %>
                                            <%= f.hidden_field :user_id, value: current_user.id %>
                                            <%= f.hidden_field :quantity, value: 1 %>
                                            <%= f.submit "Add to Cart", class: "btn btn-success btn-xs" %>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="col-sm-12 product-info">
                    <ul id="myTab" class="nav nav-tabs nav_tabs">
                        <li class="active"><a href="#service-one" data-toggle="tab"><span class="text-primary">DESCRIPTION</span></a></li>
                        <li><a href="#service-two" data-toggle="tab"><span class="text-danger">REVIEWS</span></a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="service-one">
                            <section>
                                <%= @list_details.long_desc %>
                            </section>           
                        </div>
                        <div class="tab-pane fade" id="service-two">
                            <section>     
                            UNDER CONSTRUCTION                        
                            </section>  
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
		</div> 
	</div>
</div>