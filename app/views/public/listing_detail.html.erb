<div class="page" id="list-details">
    <div class="container">
        <div class="section-header">
            <h2 class="title-one"><%= @list_details.name %></h2>
        </div>
    </div>
    <div class="container">
		<div class="row">
            <div class="content-wrapper">   
                <div class="item-container">    
                    <div class="container"> 
                        <div class="row">
                            <div class="product col-sm-4 service-image-left">
                                <center>
                                    <%= image_for_home(@list_details) %>
                                </center>
                            </div>
                            <div class="col-sm-8">
                                <div class="h3 text-danger"><%= @list_details.name %></div>
                                <div class="h4 text-info"><%= @list_details.short_desc %></div>
                                <div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
                                <hr>
                                <div class="h4">INR <%= @list_details.curr_price.round %></div>
                                <!-- <div class="product-stock">In Stock</div> -->
                                <hr>
                                <div class="btn-group cart">
                                    <a href="#" class="btn btn-success">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="col-sm-12 product-info">
                    <ul id="myTab" class="nav nav-tabs nav_tabs">
                        <li class="active"><a href="#service-one" data-toggle="tab"><span class="text-primary">DESCRIPTION</span></a></li>
                        <li><a href="#service-two" data-toggle="tab"><span class="text-danger">REVIEWS</span></a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="service-one">
                            <section>
                                <%= @list_details.long_desc %>
                            </section>           
                        </div>
                        <div class="tab-pane fade" id="service-two">
                            <section>     
                            UNDER CONSTRUCTION                        
                            </section>  
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
		</div> 
	</div>
</div>