<% @images = Dir.glob(File.join(Rails.root, 'app', 'assets', 'images', 'gallery', '*.jpg')) %>

<div class="page" id="photo">
	<div class="container">
        <div class="row text-center">
            <div class="col-sm-8 col-sm-offset-2">
                <h2 class="title-one">Photos</h2>
            </div>
        </div>
		<section class="gallery">
			<% @images.each do |image| %>
		    <article class="photo">		    	
	            <figure>
	            	<%= image_tag(File.join('gallery', image.split('/').last)) %>
	                <figcaption><h2>Image <%= image.split('/').last %></h2></figcaption>
	            </figure>
		    </article>
		    <% end %>
		</section><!-- .gallery -->
	</div>
</div>




