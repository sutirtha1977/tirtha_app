<li><%= link_to 'Home', root_path %></li> <!-- home link -->

<% if @services.count > 0 %>
<li class="dropdown">
  <a href="#service" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Service <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <% @services.each do |service| %>
      <li><%= link_to service.name, public_listing_path(:product_id => service.id) %></li>
    <% end %>
  </ul>
</li>
<% end %> <!-- services link -->

<% if @products.count > 0 %>
<li class="dropdown">
  <a href="#product" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Product <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <% @products.each do |product| %>
    <li><%= link_to product.name, public_listing_path(:product_id => product.id) %></li>
    <% end %>
  </ul>
</li>
<% end %> <!-- products link -->
