<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8">
    <title>Tirtha App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script>
    <![endif]-->
  </head>

  <body class="<%= controller_name %> <%= action_name %>" data-spy="scroll" data-target="#nav" data-offset="50">

    <%= render 'layouts/app/navigation' %> <!-- navigation -->
    <div class="main">
      <% if devise_controller? %>
        <div class="fullheight" id="devise">
          <div class="row">
              <%= yield %> <!-- main content -->
          </div>
        </div>
      <% else %>
        <%= yield %> <!-- main content -->
      <% end %>
    </div>
	<%= render 'layouts/app/footer' %> <!-- footer -->
  </body>
</html>
